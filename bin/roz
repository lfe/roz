#!/usr/bin/env bash

DB_NAME=$(cat resources/config/company-name)
LIBS="ERL_LIBS=`lfetool info erllibs`"
SCRIPT_WRAP="-s roz-script format-run"
DB="-mnesia dir \'\"$DB_NAME\"\'"
#NODE="-sname roz"
NODE=""
START="-s mnesia start"
LFE="$LIBS ./deps/lfe/bin/lfe -noshell $NODE $DB $START $SCRIPT_WRAP"
LFE_INIT="$LIBS ./deps/lfe/bin/lfe -noshell $NODE $DB $SCRIPT_WRAP"
LFEC="$LIBS ./deps/lfe/bin/lfec"
FINISH="-s mnesia stop -s erlang halt"

print-usage () {
    scriptpath=$1
    scriptname=$(basename $scriptpath)
    command="$LFE roz-script-help usage $scriptpath $scriptname $FINISH"
    #echo "command: $command"
    eval $command
}

error () {
    message=$1
    echo
    echo $message
    echo
    print-usage $script | clean-ok
    exit 1
}

unknown-command-error () {
    command=$1
    error "Unknown command: '$command'";
}

unknown-subcommand-error () {
    subcommand=$1
    error "Unknown subcommand: '$subcommand'";
}

clean-ok () {
    egrep -v '^ok$'
}

do-version () {
    echo "Version info:"
    echo
    command="$LFE_INIT roz-utils get-version $FINISH"
    #echo "command: $command"
    eval $command
}

do-repl () {
    echo "Starting roz REPL ..."
    echo
    command="ERL_LIBS=$(lfetool info erllibs) \
    PATH=$(lfetool info path) lfe $DB $START $@"
    #echo "command: $command"
    eval $command
}

do-init () {
    echo "Initializing roz data ..."
    echo
    command="$LFE_INIT roz init $FINISH"
    #echo "command: $command"
    eval $command
}

do-info-db () {
    echo "Getting DB info ..."
    echo
    command="$LFE mnesia info $FINISH"
    #echo "command: $command"
    eval $command
}

do-info-table () {
    tablename=$1
    shift 1
    key=$@
    if [ "$key" = "" ]; then
        key=all
    fi
    echo "Getting table info for '$tablename', key '$key' ..."
    echo
    command="$LFE roz-structure table-info roz-$tablename $key $FINISH"
    #echo "command: $command"
    eval $command
}

do-add-group () {
    echo "Adding group '$1' ..."
    echo
    command="$LFE roz-content add-group $@ $FINISH"
    #echo "command: $command"
    eval $command
}

do-add-team () {
    echo "Adding team '$1' ..."
    echo
    command="$LFE roz-content add-team $@ $FINISH"
    #echo "command: $command"
    eval $command
}

do-add-product () {
    echo "Adding product '$1' ..."
    echo
    command="$LFE roz-content add-product $@ $FINISH"
    #echo "command: $command"
    eval $command
}

do-add-monster () {
    echo "Adding monster '$1' ..."
    echo
    command="$LFE roz-content add-monster $@ $FINISH"
    #echo "command: $command"
    eval $command
}

do-add-kudo () {
    echo "Adding kudo '$1:$2' ..."
    echo
    command="$LFE roz-content add-kudo $@ $FINISH"
    echo "command: $command"
    eval $command
}

do-add-concern () {
    echo "Adding concern '$1:$2' ..."
    echo
    command="$LFE roz-content add-concern $@ $FINISH"
    echo "command: $command"
    eval $command
}

do-show-groups () {
    echo "Getting list of all groups ..."
    echo
    command="$LFE roz-querying show-groups $FINISH"
    #echo "command: $command"
    eval $command
}

do-show-teams () {
    echo "Getting list of all teams ..."
    echo
    command="$LFE roz-querying show-teams $FINISH"
    #echo "command: $command"
    eval $command
}

do-show-products () {
    echo "Getting list of all products ..."
    echo
    command="$LFE roz-querying show-products $FINISH"
    #echo "command: $command"
    eval $command
}

do-show-monsters () {
    echo "Getting list of all monsters ..."
    echo
    command="$LFE roz-querying show-monsters $FINISH"
    #echo "command: $command"
    eval $command
}

run-info () {
    script=$1
    subcommand=$2
    name=$3
    shift 2
    case $subcommand in
        db)
            echo
            do-info-db
            exit 0
            ;;
        table)
            echo
            do-info-table "$@"
            exit 0
            ;;
        version)
            echo
            do-version
            exit 0
            ;;
        usage)
            echo
            print-usage $script $(basename $script)
            exit 0
            ;;
        *)
            unknown-subcommand-error $subcommand
            ;;
    esac
}

run-add () {
    subcommand=$1
    name=$2
    shift 1
    case $subcommand in
        group)
            echo
            do-add-group "$name"
            exit 0
            ;;
        team)
            echo
            do-add-team "$name"
            exit 0
            ;;
        product)
            echo
            do-add-product "$name"
            exit 0
            ;;
        monster)
            echo
            do-add-monster "$@"
            exit 0
            ;;
        kudo)
            echo
            do-add-kudo "$@"
            exit 0
            ;;
        concern)
            echo
            do-add-concern "$@"
            exit 0
            ;;
        *)
            unknown-subcommand-error $subcommand
            ;;
    esac
}

run-list () {
    subcommand=$1
    name=$2
    case $subcommand in
        groups)
            echo
            do-show-groups
            exit 0
            ;;
        teams)
            echo
            do-show-teams
            exit 0
            ;;
        products)
            echo
            do-show-products
            exit 0
            ;;
        monsters)
            echo
            do-show-monsters
            exit 0
            ;;
        *)
            unknown-subcommand-error $subcommand
            ;;
    esac
}
run () {
    script=$0
    command=$1
    subcommand=$2
    shift 2
    case $command in
        -h|help)
            print-usage $script $(basename script) | clean-ok
            exit 0
            ;;
        -v|version)
            do-version
            exit 0
            ;;
        init)
            do-init | clean-ok
            exit 0
            ;;
        info)
            run-info $script $subcommand "$@" | clean-ok
            exit 0
            ;;
        add)
            run-add $subcommand "$@" | clean-ok
            exit 0
            ;;
        list)
            run-list $subcommand "$@" | clean-ok
            exit 0
            ;;
        repl)
            shift 1
            do-repl "$@"
            exit 0
            ;;
        *)
            unknown-command-error $command
            ;;
    esac
}

run "$@"
